<Window x:Class="SecureChatClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureChatClientGUI"
        mc:Ignorable="d"
        Title="Secure Chat Client" Height="500" Width="850"
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>

        <Style x:Key="ThemeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource ButtonBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI Emoji"/>
            <Setter Property="Content" Value="🌙"/>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Content" Value="☀️"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryTextColor}"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundColor}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tên của bạn:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="{DynamicResource PrimaryTextColor}"/>
            <TextBox x:Name="UserNameTextBox" Width="150" Text="Guest" Margin="0,0,10,0"/>
            <Button x:Name="ConnectButton" Content="Kết nối" Click="ConnectButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="DisconnectButton" Content="Ngắt kết nối" Click="DisconnectButton_Click" IsEnabled="False" Margin="0,0,10,0"/>

            <ToggleButton x:Name="ThemeToggleButton" 
                          Style="{StaticResource ThemeToggleStyle}"
                          Click="ThemeToggleButton_Click"
                          VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3">
            <TextBlock Text="Người dùng trực tuyến:" FontWeight="Bold" Margin="0,0,0,5" Foreground="{DynamicResource PrimaryTextColor}"/>
            <ListBox x:Name="OnlineUsersListBox" ItemsSource="{Binding OnlineUsers}" Height="300"/>
        </StackPanel>

        <ListBox x:Name="ChatListBox"
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,0,10,0"
                 ItemsSource="{Binding Messages}"
                 BorderThickness="1"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 HorizontalContentAlignment="Stretch"
                 BorderBrush="{DynamicResource BorderColor}"
                 Background="{DynamicResource SecondaryBackgroundColor}">

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid MaxWidth="420" Margin="5">
                        <Border x:Name="MessageBubble"
                                Padding="10"
                                CornerRadius="10">

                            <StackPanel>
                                <TextBlock x:Name="SenderNameText"
                                           Text="{Binding Sender}"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SecondaryTextColor}"
                                           Visibility="Collapsed" 
                                           Margin="0,0,0,4"/>

                                <TextBlock x:Name="ContentText"
                                           Text="{Binding DisplayContent, TargetNullValue=''}"
                                           TextWrapping="Wrap"
                                           Foreground="{DynamicResource PrimaryTextColor}"
                                           FontSize="14"
                                           Visibility="{Binding Content, Converter={StaticResource NullToVisibilityConverter}}"/>

                                <Image Source="{Binding Image}"
                                       MaxWidth="250"
                                       Margin="0,5,0,0"
                                       Stretch="Uniform"
                                       Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}"/>

                                <TextBlock x:Name="TimestampText"
                                           Text="{Binding Timestamp, StringFormat='HH:mm'}"
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryTextColor}"
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsMine}" Value="True">
                            <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="MessageBubble" Property="Background" Value="{DynamicResource MyBubbleColor}"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding IsMine}" Value="False">
                            <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="MessageBubble" Property="Background" Value="{DynamicResource OtherBubbleColor}"/>
                            <Setter TargetName="SenderNameText" Property="Visibility" Value="Visible"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding IsRecalled}" Value="True">
                            <Setter TargetName="ContentText" Property="FontStyle" Value="Italic"/>
                            <Setter TargetName="ContentText" Property="Foreground" Value="{DynamicResource RecalledTextColor}"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBox x:Name="MessageTextBox" Grid.Row="2" Grid.Column="0" Margin="0,10,10,0" KeyDown="MessageTextBox_KeyDown"/>

        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="SendButton" Content="Gửi tin nhắn" Click="SendButton_Click" Width="100" IsEnabled="False"/>
            <Button x:Name="SendFileButton" Content="Gửi ảnh" Click="SendFileButton_Click" Width="90" IsEnabled="False" Margin="10,0,0,0"/>
            <Button x:Name="btnThuHoi" Content="Thu Hồi" Click="btnThuHoi_Click" Width="70" Margin="10,0,0,0"/>
            <TextBlock x:Name="StatusTextBlock" Text="Trạng thái: Đã ngắt kết nối" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{DynamicResource SecondaryTextColor}"/>
        </StackPanel>
    </Grid>
</Window>