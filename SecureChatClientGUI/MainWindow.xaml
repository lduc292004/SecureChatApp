<Window x:Class="SecureChatClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureChatClientGUI"
        mc:Ignorable="d"
        Title="Secure Chat Client" Height="500" Width="850">

    <!-- 🔧 KHAI BÁO CONVERTER Ở ĐÂY -->
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Thanh kết nối -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tên của bạn:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="UserNameTextBox" Width="150" Text="Guest" Margin="0,0,10,0"/>
            <Button x:Name="ConnectButton" Content="Kết nối" Click="ConnectButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="DisconnectButton" Content="Ngắt kết nối" Click="DisconnectButton_Click" IsEnabled="False"/>
        </StackPanel>

        <!-- Danh sách người dùng -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3">
            <TextBlock Text="Người dùng trực tuyến:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="OnlineUsersListBox" ItemsSource="{Binding OnlineUsers}" Height="300"/>
        </StackPanel>

        <!-- Khung chat -->
        <ListBox x:Name="ChatListBox"
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.RowSpan="2"
                 Margin="0,0,10,0"
                 ItemsSource="{Binding Messages}"
                 Background="#F5F5F5"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 VerticalAlignment="Top">

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="4"/>
                </Style>
            </ListBox.ItemContainerStyle>

            <!-- Template tin nhắn -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="MessageBubble"
                            MaxWidth="420"
                            Padding="10"
                            CornerRadius="14"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Background="#FFFFFF"
                            Margin="0, 2, 0, 2">
                        <StackPanel>
                            <!-- Text -->
                            <TextBlock Text="{Binding Content, TargetNullValue=''}"
                                       TextWrapping="Wrap"
                                       Foreground="Black"
                                       FontSize="14"
                                       Visibility="{Binding Content, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <!-- Ảnh -->
                            <Image Source="{Binding Image}"
                                   MaxWidth="250"
                                   Margin="0,5,0,0"
                                   Stretch="Uniform"
                                   Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>
                    </Border>

                    <!-- Canh chỉnh bong bóng chat -->
                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsMine}" Value="True">
                            <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Right"/>
                            <Setter TargetName="MessageBubble" Property="Background" Value="#DCF8C6"/>
                            <Setter TargetName="MessageBubble" Property="Margin" Value="40,2,0,2"/>
                            <Setter TargetName="MessageBubble" Property="FlowDirection" Value="RightToLeft"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMine}" Value="False">
                            <Setter TargetName="MessageBubble" Property="HorizontalAlignment" Value="Left"/>
                            <Setter TargetName="MessageBubble" Property="Background" Value="#FFFFFF"/>
                            <Setter TargetName="MessageBubble" Property="Margin" Value="0,2,40,2"/>
                            <Setter TargetName="MessageBubble" Property="FlowDirection" Value="LeftToRight"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Ô nhập -->
        <TextBox x:Name="MessageTextBox" Grid.Row="3" Grid.Column="0" Margin="0,10,10,0" KeyDown="MessageTextBox_KeyDown"/>

        <!-- Nút gửi -->
        <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,10,0,0">
            <Button x:Name="SendButton" Content="Gửi tin nhắn" Click="SendButton_Click" Width="100" IsEnabled="False"/>
            <Button x:Name="SendFileButton" Content="Gửi ảnh" Click="SendFileButton_Click" Width="90" IsEnabled="False" Margin="10,0,0,0"/>
            <TextBlock x:Name="StatusTextBlock" Text="Trạng thái: Đã ngắt kết nối" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
