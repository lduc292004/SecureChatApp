<Window x:Class="SecureChatClientGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureChatClientGUI"
        mc:Ignorable="d"
        Title="Secure Chat Client" Height="500" Width="850">

    <Window.Resources>

        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <DataTemplate x:Key="MyMessageTemplate">
            <Grid HorizontalAlignment="Right" Margin="5, 2, 5, 2">
                <Border Background="#1E90FF" 
                        CornerRadius="14" 
                        Padding="10" 
                        MaxWidth="400"
                        Margin="40, 0, 0, 0">
                    <StackPanel>
                        <TextBlock Text="{Binding Content, TargetNullValue=''}"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Visibility="{Binding Content, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <Image Source="{Binding Image}"
                               MaxWidth="250"
                               Margin="0,5,0,0"
                               Stretch="Uniform"
                               Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <TextBlock Text="{Binding DisplayContent}" 
                                   FontStyle="Italic" 
                                   Foreground="LightGray"
                                   Visibility="{Binding IsRecalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="OtherMessageTemplate">
            <Grid HorizontalAlignment="Left" Margin="5, 2, 5, 2">

                <Border Background="#EAEAEA" 
                        CornerRadius="14" 
                        Padding="10" 
                        MaxWidth="400"
                        Margin="0, 0, 40, 0">
                    <StackPanel>
                        <TextBlock Text="{Binding Sender, StringFormat='\{0\}:'}"
                                   FontWeight="Bold"
                                   Foreground="#444444"
                                   Margin="0,0,0,3"/>

                        <TextBlock Text="{Binding Content, TargetNullValue=''}"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   FontSize="14"
                                   Visibility="{Binding Content, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <Image Source="{Binding Image}"
                               MaxWidth="250"
                               Margin="0,5,0,0"
                               Stretch="Uniform"
                               Visibility="{Binding Image, Converter={StaticResource NullToVisibilityConverter}}"/>

                        <TextBlock Text="{Binding DisplayContent}" 
                                   FontStyle="Italic" 
                                   Foreground="#666666"
                                   Visibility="{Binding IsRecalled, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   HorizontalAlignment="Center"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <local:ChatTemplateSelector x:Key="ChatTemplateSelector"
                                     MyMessageTemplate="{StaticResource MyMessageTemplate}"
                                     OtherMessageTemplate="{StaticResource OtherMessageTemplate}"/>

    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Tên của bạn:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="UserNameTextBox" Width="150" Text="Guest" Margin="0,0,10,0"/>
            <Button x:Name="ConnectButton" Content="Kết nối" Click="ConnectButton_Click" Margin="0,0,5,0"/>
            <Button x:Name="DisconnectButton" Content="Ngắt kết nối" Click="DisconnectButton_Click" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="4">
            <TextBlock Text="Người dùng trực tuyến:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListBox x:Name="OnlineUsersListBox" 
                     ItemsSource="{Binding OnlineUsers}" 
                     Height="380"
                     SelectionChanged="OnlineUsersListBox_SelectionChanged"/>
        </StackPanel>

        <ListBox x:Name="ChatListBox"
                 Grid.Row="1"
                 Grid.Column="0"
                 Margin="0,0,10,0"
                 ItemsSource="{Binding Messages}"
                 ItemTemplateSelector="{StaticResource ChatTemplateSelector}"
                 Background="#F5F5F5"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <Grid Grid.Row="2" Grid.Column="0" Height="10"/>

        <TextBox x:Name="MessageTextBox" 
                 Grid.Row="3" 
                 Grid.Column="0" 
                 Margin="0,0,10,0" 
                 KeyDown="MessageTextBox_KeyDown"/>

        <Grid Grid.Row="4" Grid.Column="0" Margin="0,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="SendButton" Content="Gửi tin nhắn" Click="SendButton_Click" Width="100" IsEnabled="False" Grid.Column="0"/>
            <Button x:Name="SendFileButton" Content="Gửi ảnh" Click="SendFileButton_Click" Width="90" IsEnabled="False" Margin="10,0,0,0" Grid.Column="1"/>
            <TextBlock x:Name="StatusTextBlock" Text="Trạng thái: Đã ngắt kết nối" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Gray" Grid.Column="2"/>
            <Button x:Name="btnThuHoi" Content="Thu Hồi" Click="btnThuHoi_Click" Width="80" Grid.Column="3"/>
        </Grid>
    </Grid>
</Window>